getgenv().AutoHighArm = false;
getgenv().lock = false;
local camera = game.Workspace.Camera
local me = game.Players.LocalPlayer
local user = nil
local userPart = nil
local TS = game.TweenService
local tweeninfo = TweenInfo.new(0.5)
local nameInp = nil

local function getFullUser(input)
    local players = game.Players:GetPlayers()
    for _, player in ipairs(players) do 
        user = player:GetName(input)
        userPart = game.workspace.user.Character.LowerTorso
    end
    return user, userPart
end

local function startLock(target)
    spawn(function()
        while wait() do
            if lock then
                if target ~= me and target.Name ~= me.Name then
                    local tween = TS:Create(camera, tweenInfo, {CFrame = CFrame.new(camera.Position, target.Position)})
                    tween:Play()
                    if not lock then tween:Cancel() return end
                end
            end
        end
    end)
end

local function autoBuyArmour()
    spawn(function()
        while wait() do
            if AutoHighArm then
                fireclickdetector(workspace.MAP.Map["[High-Medium Armor]"].ClickDetector)
                wait(0.05)
            end
        end
    end)
end

local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()
local window = lib:Load("Made By Tariq", "Default")
local tab = lib.newTab("Main", "Image Id here")

tab.newToggle("Auto Buy High-Medium Armour", "", false, function(bool)
    AutoHighArm = bool
    autoBuyArmour()
end)
tab.newInput("Username", "Username to lock on.", function(inp)
    nameInp = inp
    getFullUser(nameInp)
end)
tab.newToggle("Lock On User", "Starts Locking.", false, function(bool)
    lock = bool
    startLock(user)
end)